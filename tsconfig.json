{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext" /* Crucial for ESM in Node */,
    "moduleResolution": "NodeNext" /* Crucial for ESM in Node */,
    "baseUrl": "./src" /* Allows absolute imports from src */,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src/**/*"]
}
